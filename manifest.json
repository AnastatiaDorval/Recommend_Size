{
    "manifest_version": 3,
    "name": "ShopSi",
    "description": "Size Recommender!",
    "version": "1.0",
    "action": {
        "default_icon": "128.png",
        "default_popup": "popup.html"
    },
    "host_permissions": ["https://*"],
    "background": {
        "service_worker": "background-script.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://*"],
            "js": ["contentScript.js"]
        }
    ]
}